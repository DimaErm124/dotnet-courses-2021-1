@model IEnumerable<EntityLibrary.Reward>

<div class="col-10">
    <h3 class="display-4">Rewards</h3>
</div>
<div class="row">
    <div class="col-10">

    </div>
    <div class="col-2">
        <p>
            <a asp-action="Add" class="btn btn-outline-primary btn-block" role="button">Add</a>
        </p>
    </div>
</div>


<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div class="form-group">
                        <a href="Reward/Edit/@item.ID" class="btn btn-outline-success btn-sm btn-block" role="button">Edit</a>
                    </div>
                    <div class="form-group">
                        <a href="Reward/Delete/@item.ID" class="btn btn-outline-danger btn-sm btn-block" role="button">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
