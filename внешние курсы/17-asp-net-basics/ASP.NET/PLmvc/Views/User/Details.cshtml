@model UserViewModel

<link rel="stylesheet" href="~/css/table.css" />
<br />
<h1 class="display-4">@Model.FirstName @Model.LastName</h1>
<br />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
    <div class="form-group">
        <a asp-controller="User"
           asp-action="Rewarding"
           asp-route-id="@Model.ID"
           class="btn btn-success btn-sm btn-block" role="button">Rewarding</a>
    </div>
    @if (ViewBag.UserRewards.Count != 0)
    {
        <div class="table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th hidden>
                            ID
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (EntityLibrary.Reward item in ViewBag.UserRewards)
                    {
                        <tr>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <div class="form-group">
                                    <a asp-controller="User"
                                       asp-action="DeleteUserReward"
                                       asp-route-id="@item.ID"
                                       asp-route-userId="@Model.ID"
                                       class="btn btn-outline-danger btn-sm btn-block" role="button">x</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="col-3">
        <form asp-controller="User" asp-action="Index">
            <div class="form-group">
                <button type="submit" class="btn btn-outline-secondary btn-block">Back</button>
            </div>
        </form>
    </div>
</div>
